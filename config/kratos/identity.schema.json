{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "traits": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "picture": {
          "type": "string",
          "format": "uri"
        }
      },
      "required": ["email"],
      "additionalProperties": false
    }
  }
}